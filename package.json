{
  "name": "gno",
  "displayName": "Gno",
  "version": "0.1.0-dev",
  "preview": true,
  "publisher": "harry-hov",
  "description": "Gno language support for Visual Studio Code",
  "author": {
    "name": "Hariom Verma"
  },
  "license": "MIT",
  "icon": "media/gno-logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/harry-hov/vscode-gno"
  },
  "bugs": {
    "url": "https://github.com/harry-hov/vscode-gno/issues"
  },
  "categories": [
    "Programming Languages",
    "Formatters"
  ],
  "engines": {
    "vscode": "^1.74.0"
  },
  "main": "./out/main.js",
  "activationEvents": [
    "onLanguage:gno",
    "workspaceContains:*.gno",
    "workspaceContains:*/*.gno",
    "workspaceContains:*/*/*.gno",
    "onCommand:gno.welcome"
  ],
  "contributes": {
    "languages": [
      {
        "id": "gno",
        "aliases": [
          "Gnolang",
          "gno"
        ],
        "extensions": [
          ".gno"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "dark": "media/gno-logo-white.png",
          "light": "media/gno-logo-black.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "gno",
        "scopeName": "source.gno",
        "path": "./syntaxes/gno.tmLanguage.json"
      }
    ],
    "configurationDefaults": {
      "[gno]": {
        "editor.insertSpaces": false,
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": true
        },
        "editor.suggest.snippetsPreventQuickSuggestions": false
      }
    },
    "commands": [
      {
        "command": "gno.welcome",
        "title": "Gno: Welcome",
        "description": "Open the welcome page for the Gno extension."
      },
      {
        "command": "gno.format",
        "title": "Gno: Format Document",
        "description": "Use `gofumpt` to format .gno file"
      }
    ]
  },
  "devDependencies": {
    "@types/node": "13.13.46",
    "@types/vscode": "1.67.0",
    "esbuild": "0.12.21",
    "prettier": "2.2.1",
    "typescript": "^4.9.4"
  }
}
